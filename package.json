{
    "name": "weather-mcp-server",
    "version": "1.0.0",
    "private": true,
    "description": "Custom MCP server that fetches weather data from Open-Meteo and exposes tools to LLM hosts.",
    "type": "module",
    "engines": {
        "node": ">=18.18.0"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "client:dev": "tsx src/client/index.ts",
        "client:build": "tsc -p tsconfig.json --outDir dist-client",
        "client:start": "node dist-client/client/index.js",
        "test:client": "node test-client.js"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.3.0",
        "undici": "^7.15.0",
        "zod": "^3.23.8",
        "openai": "^4.28.0",
        "dotenv": "^16.4.1",
        "readline": "^1.3.0"
    },
    "devDependencies": {
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "@types/node": "^20.11.0"
    }
}